<div class="hint-edit-page">
<h4 class="heading">
  <span>Редактирование подсказки к заданию "<%= link_to @level.name, [@game, @level] %>" игры "<%= link_to @game.name,@game %>"</span>
</h4>

<%= error_messages_for @hint, :header => "<h2>Ошибка</h2>" %>

<%= form_for [@game, @level, @hint], :action => game_level_hints_path(@game, @level) do |f| %>

  <%= render 'form', :hint => @hint, :f => f %>

  <div class="row form-actions">
      <%= f.submit t(:update, scope: [:activerecord, :attributes, :hint]) %>
      <%= link_to "(вернуться)", [@hint.level.game, @hint.level] %>
  </div>
<% end %>
</div>