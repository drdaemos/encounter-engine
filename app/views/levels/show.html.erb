<div class="level-page">
  <h3 class="heading">
    <span>Задание "<strong><%= @level.name %></strong>"</span>
    <small>(игра "<%= link_to @game.name, @game %>")</small>
    <%= link_to "Удалить", [@game, @level], :class => 'right-link', :method => :delete %>
  </h3>

  <h4 class="page-section">Текст задания:</h4>
  <div class="level-text"><%= @level.text.html_safe %></div>

  <div class="edit-link">
    <%= link_to "Редактировать текст и название задания", [:edit, @game, @level] unless @level.game.started? %>
  </div>

  <hr>

  <div class="level-codes">
    <% if @level.questions.size > 0 %>
      <% unless @level.multi_question? %>
        <div class="level-code" id="question-<%= @level.questions.first.id %>">
          <span>Код:</span>
          <span class="code-answer">
            <%= @level.correct_answer %>
          </span>
          <span class="edit-link">
          <%= link_to "(редактировать)", game_level_question_answers_path(@game, @level, @level.questions.first) %>
          </span>
        </div>
      <% else %>
        <h5>Коды (<%= @level.questions.size %>):</h5>
        <% @level.questions.each do |question| %>
          <div class="level-code" id="question-<%= question.id %>">
            <span class="code-answer"><%= question.correct_answer %></span>
            <span class="edit-link">
            <%= link_to "(редактировать)", game_level_question_answers_path(@game, @level, question) %>
            </span>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="add-link">
      <%= link_to "Добавить ещё один код", [:new, @game, @level, :question] %>
    </div>
  </div>

  <hr>

  <div class="level-hints">
    <h4 class="page-section">Подсказки и спойлеры:</h4>
    
    <%= render 'hints/list', :hints => @level.hints %>

    <div class="add-link">
      <%= link_to "Добавить подсказку", [:new, @game, @level, :hint] %>
    </div>
  </div>

  <div class="page-actions">
    <span class="page-action">
      <%= link_to "Вернуться к игре \"#{@level.game.name}\"", @level.game %>
    </span>
  </div>
</div>