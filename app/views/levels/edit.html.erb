<h2>
  Задание "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(игра "<%= link_to @level.game.name, @level.game %>")</em>
</p>

<br />

<%= error_messages_for @level, :header => "<h2>Ошибка</h2>" %>

<%= form_for [@level.game, @level], :action => [@level.game, @level] do %>
  <p><%= text_field :name, :label => "Название" %></p>
  <p><%= text_area :text, :label => "Текст задания" %></p>
  <%= submit_tag "Сохранить" %>
  <em><%= link_to "(отменить)", [@level.game, @level] %></em>
<% end =%>