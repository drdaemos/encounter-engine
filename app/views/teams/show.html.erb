<div class="team-page">
  <h2 class="heading">
    Команда &laquo;<%= @team.name %>&raquo;
    <% if user_can_edit? %>
      <%= link_to "Расформировать", team_path, :method => :delete, :class => "heading-link" %>
    <% end %>
  </h2>

  <div class="team-members">
    <h5 class="heading">
      Состав
      <%= link_to "Пригласить участников", :new_invitation, :class => "heading-link" if user_can_edit? %>
    </h5>
    <ul class="members-list">
      <% @team.members.each do |member| %>
        <li><%= link_to member.nickname, [member] %> <%= "- капитан" if member.captain? %></li>
      <% end %>
    </ul>
  </div>

  <% if user_can_edit? %>
  <div class="team-controls">
    <%= render 'shared/current_games' %>
    <%= render 'dashboard/coming_games' %>
    <%= render 'dashboard/finished_games' %>
  </div>
  <% end %>
</div>