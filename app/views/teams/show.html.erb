<div class="team-page">
  <h4 class="heading">Команда "<%= @team.name %>"</h4>

  <div class="team-members">
    <h5 class="heading">
      Состав
      <%= link_to "Пригласить участников", :new_invitation, :class => "heading-link" if current_user.captain? %>
    </h5>
    <ul class="members-list">
    <% @team.members.each do |member| %>
      <li><%= link_to member.nickname, [member] %> <%= "- капитан" if member.captain? %></li>
    <% end %>
    </ul>
  </div>
</div>