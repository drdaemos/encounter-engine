<div class="errors">
<%= error_messages_for @game, :header => "<h2>Ошибки</h2>" %>
</div>

<%= form_for @game, :action => :games do |f| %>
  <%= render 'form', :game => @game, :f => f %>

  <div class="row form-actions">
      <%= f.submit t(:submit, scope: [:activerecord, :attributes, :game]) %>
      <%= link_to "(отменить)", dashboard_path %>
  </div>
<% end =%>