<h2>
  Игра "<strong><%= @game.name %></strong>"
</h2>

<% if @game.draft? %>
  <div class="is-draft-message">Черновик</div>
<% end %>


<p>
  <em>Автор</em> - <strong><%= @game.author.nickname %></strong>
</p>

<p>
  <% unless @game.starts_at.nil? %>
    <em>Начало игры</em>: <%= @game.starts_at.strftime("%Y-%m-%d %H:%M") %>
  <% else %>
    Дата начала игры ещё не назначена
  <% end %>
</p>
<p>
  <% unless @game.registration_deadline.nil? %>
    <em>Крайний срок регистрации</em>: <%= @game.registration_deadline.strftime("%Y-%m-%d %H:%M") %>
  <% else %>
    Крайний срок регистрации ещё не назначен
  <% end %>
</p>

<p>
  <em>Описание:</em>
</p>

<p>
  <%= @game.description %>
</p>
<p>
  <em>Максимальное количество команд:</em>
</p>
<p>
  <%= @game.max_team_number %>
</p>

<br />

<% if user_signed_in? and current_user.author_of?(@game) %>

  <fieldset>
    <legend>
      Задания:
    </legend>

    <p>
      <%= render 'levels/list', :levels => @game.levels  %>
    </p>

    <p>
      <%= link_to "Добавить новое задание", new_game_level_path(@game) if ! @game.started? %>
    </p>
  </fieldset>
  <br/>
      <%= render 'games/game_entries', :game_entries => @game_entries  %>

    <br/>

    <%= render 'games/teams', :teams => @teams  %>
  <br />
  <p>
    <%= link_to "Редактировать эту игру", edit_game_path(@game) if ! @game.started? %>
  </p>

  <p>
    <%= link_to "Удалить эту игру", @game, method: :delete %> <br />
  </p>

<% end %>

<script type="text/javascript" src="/javascripts/jquery-1.3.2.min.js"></script>
<%= render 'shared/countdown' %>
<div id="countdown-example"></div>

<script type="text/javascript">
  <% unless @game.starts_at.nil? %>
    var date = new Date(<%= (@game.starts_at + 1).strftime("%Y,%m-1,%d,%H,%M,%S") %>);
  <% end %>

  $("#countdown-example").countdown(date,{
    prefix:'До начала осталось: '
  });
</script>

<br />
<%= render 'teams', :teams => @teams if (!user_signed_in?) || (user_signed_in? && !current_user.author_of?(@game)) %>

<% if @game.draft? and !@game.started? and @game.levels and @game.levels.count > 0 %>
   <%= link_to 'Начать тестирование', "games/start_test/#{@game.id}" %>
<% end %>

<% if @game.is_testing? %>
   <%= link_to "Старт", :show_current_level, :game_id => @game.id %>
   <br />
   <%= link_to "Завершить тестирование", "games/finish_test/#{@game.id}" %>
<% end %>
