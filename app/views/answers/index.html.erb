<h2>
  Задание "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(игра "<%= link_to @game.name, @game %>")</em>
</p>

<h2>Ошибка</h2>
<% if @answer.errors.any? %>
  <% @answer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
<% end %>
<br />

<p>
  <em>Варианты кодов:</em>
</p>
<table>
  <% @answers.each do |answer| %>
  <tr id="answer-<%=  answer.id%>">
    <td><%= answer.value %></td>
    <td><%= link_to "(удалить)", [@game, @level, @question, answer, :delete] %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_for @answer, :action => [@game, @level, @question, :answers] do %>
  <p><%= text_field :value, :label => "Ещё один вариант кода" %></p>
  <%= submit_tag "Добавить вариант кода" %>
  <em><%= link_to "(отменить)", [@game, @level] %></em>
<% end =%>