<h2>
  Задание "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(игра "<%= link_to @game.name, @game %>")</em>
</p>

<br />

<%= error_messages_for @answer, :header => "<h2>Ошибка</h2>" %>

<%= form_for [@game, @level, @question], :action => :game_level_questions do |f| %>
  <div class="row">
    <%= f.label :correct_answer, t(:correct_answer, scope: [:activerecord, :attributes, :question]) %>
    <%= f.text_field :correct_answer %>
  </div>
  <%= f.submit "Добавить код" %>
  <em><%= link_to "(отменить)", [@game, @level] %></em>
<% end =%>