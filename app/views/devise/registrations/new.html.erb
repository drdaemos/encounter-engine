<h2 class="heading">Регистрация участника</h2>

<div class="social-login-buttons">
  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <div class="social-login <%= provider %>">
        <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "button" %>
      </div>
    <% end %>
  <% end %>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, autofocus: true %>
    <%= f.error :nickname %>
  </div>

  <div class="row">
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.error :email %>
  </div>

  <div class="row">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <%= f.hint "(минимум #{@minimum_password_length} символов)" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %>
    <%= f.error :password %>
  </div>

  <div class="row">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.error :password_confirmation %>
  </div>

  <hr class="invisible">

  <div class="row form-actions">
    <%= f.submit "Зарегистрироваться" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

